
text {
  font-family: Arial, Helvetica, sans-serif;
}

.header{
  z-index: 1000;
  position: absolute;
  top:16px;
}
.header-inner {
  position: relative;
  display: flex;
  width:750rpx;
  padding: 0 32rpx;
  font-size: 14px;
  justify-content: space-between;
}
.header-inner .map {
  display: flex;
  align-items: center;
  background-color: rgba(0,0,0,0.2);
  border-radius: 32rpx;
  padding: 0 16rpx 0 0;
  color: #fff;
}
.header-inner .map .icon {
  width: 56rpx;
  height: 56rpx;
}
.header-inner .navigator {
  display: block;
  max-width: 196rpx;
  color: #f4f4f4;
  font-size: 24rpx;
  margin: 0 16rpx 0 0rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis;/*文字隐藏后添加省略号*/
  white-space: nowrap;
}
.header-inner input {
  width:500rpx;
  border: 1px solid #f1f1f1;
  padding: 0 8px;
  background-color: #fff;
  border-radius: 14px;
  margin-left: 32rpx;
}
.header-inner .search {
  position: absolute;
  width: 56rpx;
  height: 56rpx;
  z-index: 2000;
  right: 46rpx;
  top:-2rpx;
}
.header-inner .searchIConShow {
  display: none;
}

.label {
  border-left: 3px solid #ff8a00;
  display: flex;
  justify-content: space-between;
  margin-top: 8px;
  padding: 10px;
  font-size: 14px;
  color: #212121;
}

.courses {
  margin: 0 24rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.course {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #ddd;
  margin: 16px 0;
  box-sizing: border-box;
}

.title {
  color: #212121;
  font-size: 10px;
  border-top: 1px solid #ddd;
  width: 100%;
  text-align: center;
  padding-top: 16px;
  padding-bottom: 16px;
}

.cats {
  display: flex;
}
.cat {
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #f1f1f1;
}
.cat text {
  font-size: 14px;
  text-align: center;
  display: block;
}
.block {
  display: flex;
  flex-wrap: wrap;
}
.block text {
  width: 149rpx;
  font-size: 10px;
  padding-top: 16rpx;
}
.block navigator {
  padding: 16rpx 0;
}
.block image {
  display: block;
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto;
}
