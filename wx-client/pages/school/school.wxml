      <image src="{{item.cover}}" mode="aspectFill"  style="width: 200rpx;height:200rpx;border-radius:10rpx"/>
      <view class="box">
        <text class="title">{{item.title}}</text>
        <view class="describe">
          <text style="color: #888888; font-size: 24rpx">课时：96</text>
          <text style="color: #888888; font-size: 24rpx">已售：196</text>
        </view>
        <view class="describe">
          <text style="font-size: 32rpx;color: #e64340">¥2800</text>
          <text style="color: #888888; font-size: 24rpx">市场价：¥4196</text>
        </view>
      </view>
    </navigator>
  </view>
  <view class="morecourse">
    <text>查看更多课程</text>
    <image src="../../images/jiantou.svg" />
  </view>
