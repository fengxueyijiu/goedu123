<view class="container">
<view class="school">
  <text style="font-size:16px">徐州市星海舞蹈艺术中心</text>
  <text style="font-size:14px;color:#888888;"> 9.9分｜ 普通学校</text>
  <text style="font-size:14px;color:#888888;padding-left:40rpx">徐州中山北路延长段牌楼办事处28栋</text>
  <image class="phone" src="../../images/dianhua.svg" />
  <image class="icon" src="../../images/icon.svg" />
</view>
<view class="erweima" bindtap="click">
  <text>点击生成二维码</text>
  <image class="icon" src="../../images/erweima.svg" />
  <view class="backrop" wx:if="{{show}}"></view>
  <view class="show" wx:if="{{show}}">
