/* pages/collection/collection.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

header {
  flex-shrink: 0;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-bottom: 2rpx solid #f1f1f1;
}

header text {
  display: block;
  padding: 16rpx 48rpx;
  font-size: 32rpx;
}
.line {
  border-bottom: 3px solid #ff8a00;
}

.content {
  flex-grow: 1;
  overflow-y: scroll;
}


.courses {
  margin: 0 24rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.course {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #ddd;
  margin: 16px 0;
  box-sizing: border-box;
}

.title {
  color: #212121;
  font-size: 10px;
  border-top: 1px solid #ddd;
  width: 100%;
  text-align: center;
  padding-top: 16px;
  padding-bottom: 16px;
}
