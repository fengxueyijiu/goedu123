/* pages/schools/schools.wxss */

.courses {
  margin: 0 24rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.course {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #ddd;
  margin: 16px 0;
  box-sizing: border-box;
}

.title {
  color: #212121;
  font-size: 10px;
  border-top: 1px solid #ddd;
  width: 100%;
  text-align: center;
  padding-top: 16px;
  padding-bottom: 16px;
}
