/* pages/commodity/home/home.wxss */

page {
  background-color: #f1f1f1;
}

.nav {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 0;
  margin-top: 16rpx;
  background-color: #fff;
}

.nav navigator {
  width: 20%;
  padding: 16rpx 0;
}

.nav navigator image {
  display: block;
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto;
}

.nav navigator text {
  display: block;
  width: 100%;
  font-size: 10px;
  padding-top: 16rpx;
  text-align: center;
}

.content {
  background-color: #fff;
}

.label {
  border-left: 3px solid #ff8a00;
  display: flex;
  justify-content: space-between;
  margin-top: 8px;
  padding: 10px;
  font-size: 14px;
  color: #212121;
}

.courses {
  margin: 0 24rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.course {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #ddd;
  margin: 16px 0;
  box-sizing: border-box;
}

.title {
  color: #212121;
  font-size: 10px;
  border-top: 1px solid #ddd;
  width: 100%;
  text-align: center;
  padding-top: 16px;
  padding-bottom: 16px;
}
